<%= content_tag :div, class: 'media', id: "comment-#{comment.id}" do %>
  <%= link_to '#', class: 'pull-left' do %>
    <%= image_tag(comment.user.avatar.small.url) if comment.user.avatar? %>
  <% end %>
  <div class="media-body">
  <p><%= comment.body %></p>
  <small>
    <p>submitted <%= time_ago_in_words(comment.created_at) %> ago by <%= comment.user.name %></p>
    <% if can? :destroy, comment %>
      <%= link_to "Delete Comment", [@topic, @post, comment], method: :delete, class: 'btn btn-primary btn-mini btn-danger' %>
    <% end %>
    <hr>
  </small>
  <% end %>